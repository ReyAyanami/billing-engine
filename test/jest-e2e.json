{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "tsconfig": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
      }
    }]
  },
  "moduleNameMapper": {
    "^uuid$": "uuid",
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(uuid)/)"
  ]
}
