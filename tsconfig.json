{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // ===== STRICT MODE (Migration Phase 1) =====
    // Enabling strict mode incrementally - contains all flags below
    "strict": true,
    // Individual strict flags (redundant with strict: true, but explicit for documentation):
    "strictNullChecks": true,           // Already enabled
    "noImplicitAny": true,              // Already enabled
    "strictBindCallApply": true,        // Already enabled
    "strictFunctionTypes": true,        // NEW - Stricter function type checking
    "strictPropertyInitialization": true, // NEW - Class properties must be initialized
    "noImplicitThis": true,             // NEW - 'this' must have explicit type
    "alwaysStrict": true,               // NEW - Emit 'use strict'
    "useUnknownInCatchVariables": true, // NEW - Catch variables are 'unknown'
    
    // ===== ADDITIONAL SAFETY FLAGS =====
    "noFallthroughCasesInSwitch": true, // Prevent fallthrough in switch
    "noImplicitReturns": true,          // All code paths must return
    "noImplicitOverride": true          // Require 'override' keyword
    // TODO: Enable in next phase after fixing remaining issues:
    // "noUnusedLocals": true,             // Flag unused local variables
    // "noUnusedParameters": true,         // Flag unused parameters
    // "noUncheckedIndexedAccess": true,   // Array/object access returns T | undefined
    // "noPropertyAccessFromIndexSignature": true // Require bracket notation for index signatures
  }
}
