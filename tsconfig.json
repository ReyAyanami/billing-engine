{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // ===== STRICT MODE (Migration Phase 1) =====
    // Enabling strict mode incrementally - contains all flags below
    "strict": true,
    // Individual strict flags (redundant with strict: true, but explicit for documentation):
    "strictNullChecks": true,           // Already enabled
    "noImplicitAny": true,              // Already enabled
    "strictBindCallApply": true,        // Already enabled
    "strictFunctionTypes": true,        // NEW - Stricter function type checking
    "strictPropertyInitialization": true, // NEW - Class properties must be initialized
    "noImplicitThis": true,             // NEW - 'this' must have explicit type
    "alwaysStrict": true,               // NEW - Emit 'use strict'
    "useUnknownInCatchVariables": true, // NEW - Catch variables are 'unknown'
    
    // ===== ADDITIONAL SAFETY FLAGS (Phase 1 - Gradual) =====
    "noFallthroughCasesInSwitch": true, // Already enabled
    "noImplicitReturns": true,          // NEW - All code paths must return
    "noImplicitOverride": true          // NEW - Require 'override' keyword
    // Commented out for gradual migration - will enable in later phases:
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noUncheckedIndexedAccess": true,
    // "noPropertyAccessFromIndexSignature": true
  }
}
